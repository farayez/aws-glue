{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Container",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Launch Container",
                "Attach to Container"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Launch Container",
            "type": "shell",
            "command": "docker",
            "args": [
                "run",
                "-d",
                "-it",
                "--rm",
                "--user",
                "root",
                "-v",
                ".:/home/hadoop/workspace/",
                "-v",
                "./jars/:/opt/spark/jars/",
                "-v",
                "aws-glue-vscode-server:/root/.vscode-server",
                "-e",
                "AWS_PROFILE=${input:awsProfile}",
                "-e",
                "AWS_SHARED_CREDENTIALS_FILE=/home/hadoop/workspace/.aws/credentials",
                "-e",
                "AWS_CONFIG_FILE=/home/hadoop/workspace/.aws/config",
                "--name",
                "glue5_pyspark",
                "public.ecr.aws/glue/aws-glue-libs:5",
                "pyspark"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "echo": false,
                "group": "Container"
            }
        },
        {
            "label": "Attach to Container",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "code --folder-uri \"vscode-remote://attached-container+$(printf 'glue5_pyspark' | xxd -p)/home/hadoop/workspace\""
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        }
    ],
    "inputs": [
        {
            "id": "awsProfile",
            "type": "command",
            "command": "extension.commandvariable.pickStringRemember",
            "args": {
                "description": "Select local AWS Profile",
                "fileName": "${workspaceFolder}/.aws/config",
                "fileFormat": "pattern",
                "pattern": {
                    "regexp": "\\[(?:profile\\s+)?([^\\]]+)\\]",
                    "match": "line",
                },
            }
        }
    ]
}